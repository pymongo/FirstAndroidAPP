<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_margin="16dp"
  tools:context=".MainActivity">

  <EditText
    android:id="@+id/squareInput"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:ems="10"
    android:hint="请输入数字"
    android:inputType="textPersonName"
    app:layout_constraintEnd_toStartOf="@+id/squareCalc"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/squareCalc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:text="计算平方"
    app:layout_constraintBaseline_toBaselineOf="@+id/squareInput"
    app:layout_constraintStart_toEndOf="@+id/squareInput" />


  <TextView
    android:id="@+id/squareLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:text="平方计算结果："
    android:textSize="30sp"
    app:layout_constraintTop_toBottomOf="@+id/squareInput"
    tools:layout_editor_absoluteX="16dp" />

  <TextView
    android:id="@+id/squareOutput"
    android:layout_width="120dp"
    android:layout_height="40dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:textSize="30sp"
    app:layout_constraintBaseline_toBaselineOf="@+id/squareLabel"
    app:layout_constraintStart_toEndOf="@+id/squareLabel" />

  <Button
    android:id="@+id/toastButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="32dp"
    android:text="toastButton"
    android:textAllCaps="false"
    app:layout_constraintTop_toBottomOf="@+id/squareLabel"
    tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>